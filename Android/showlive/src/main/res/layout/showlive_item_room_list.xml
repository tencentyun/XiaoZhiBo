<?xml version="1.0" encoding="utf-8"?>
<com.tencent.liteav.showlive.ui.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tencent.liteav.showlive.ui.view.RoundCornerImageView
        android:id="@+id/img_anchor_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:radius="15dp"
        app:cover_color="@color/showlive_transparent"
        android:src="@drawable/showlive_bg_cover"
        app:shape="fillet" />

    <TextView
        android:id="@+id/tv_anchor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_room_name"
        android:ellipsize="end"
        android:singleLine="true"
        android:visibility="gone"
        android:layout_marginLeft="4dp"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/live_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:text="@string/showlive_audience_members"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/showlive_watch_members"
        android:background="@drawable/showlive_pusher_info_background"
        android:textSize="12sp" />
</com.tencent.liteav.showlive.ui.view.SquareLayout>

