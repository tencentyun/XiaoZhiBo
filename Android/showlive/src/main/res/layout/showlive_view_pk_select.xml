<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/showlive_bg_bottom_dialog">

    <TextView
        android:id="@+id/tv_pusher_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text="@string/showlive_pk_invite"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_pusher_tag"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="@string/showlive_cancel"
        android:textColor="@color/showlive_color_main_text"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_anchor_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_pusher_tag"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone" />

    <include
        layout="@layout/showlive_enter_room_by_id"
        android:id="@+id/layout_invite_pk_by_id"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tv_pusher_tag"
        android:visibility="gone" />
</RelativeLayout>