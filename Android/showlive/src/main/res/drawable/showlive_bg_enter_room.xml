<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/showlive_color_tab_select" />
            <corners android:radius="28dp" />
            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/showlive_transparent_half" />
            <corners android:radius="28dp" />
            <padding android:bottom="3dp" android:left="5dp" android:right="5dp" android:top="3dp" />
        </shape>
    </item>
</selector>